@page
@model CommunityManager.Pages.Houses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit House</h1>

<h4>House</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="House.Id" />

            <div class="form-group">
                <label asp-for="House.name" class="control-label"></label>
                <input asp-for="House.name" class="form-control" />
                <span asp-validation-for="House.name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="House.address" class="control-label"></label>
                <input asp-for="House.address" class="form-control" />
                <span asp-validation-for="House.address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="House.utility" class="control-label"></label>
                <input asp-for="House.utility" class="form-control" />
                <span asp-validation-for="House.utility" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Select Residents</label>
                <div>
                    @foreach (var resident in Model.AllResidents)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   id="resident_@resident.Id"
                                   name="SelectedResidentIds"
                                   value="@resident.Id"
                            @(Model.SelectedResidentIds.Contains((int)resident.Id) ? "checked" : "") />
                            <label class="form-check-label" for="resident_@resident.Id">
                                @resident.name
                            </label>
                        </div>
                    }
                </div>
            </div>


            
            <div class="form-group mt-3">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-page="./Details" asp-route-id="@Model.House.Id" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
