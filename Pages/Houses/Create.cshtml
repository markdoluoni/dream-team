@page
@model CommunityManager.Pages.Houses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create House</h1>

<h4>House</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="House.name" class="control-label"></label>
                <input asp-for="House.name" class="form-control" />
                <span asp-validation-for="House.name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="House.utility" class="control-label"></label>
                <input asp-for="House.utility" class="form-control" />
                <span asp-validation-for="House.utility" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="selectedResidents" class="control-label">Select Residents</label>
                @foreach (var resident in Model.AllResidents)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                                id="resident_@resident.Id"
                                name="SelectedResidentIds"
                                value="@resident.Id"
                        @(Model.SelectedResidentIds.Contains((int)resident.Id) ? "checked" : "") />
                        <label class="form-check-label" for="resident_@resident.Id">
                            @resident.name
                        </label>
                    </div>
                }
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
