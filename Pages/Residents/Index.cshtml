@page
@model CommunityManager.Pages.Residents.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">Residents</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Residents[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Residents[0].baseRent)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var resident in Model.Residents)
        {
            <tr class="">
                <td>
                    <a asp-page="./Details" asp-route-id="@resident.Id" class="row-link">@Html.DisplayFor(modelItem => resident.name)</a>
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => resident.baseRent)
                </td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@resident.Id" onsubmit="return confirm('Are you sure you want to delete this resident?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>